@model Usuario
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>
<form method="POST" asp-action="Login">
    <p>
        <label>Login</label>
        <input asp-for="Login">
    </p>
    <p>
        <label>Senha</label>
        <input asp-for="Senha" type="password">
    </p>

    <p>
        <input type="submit" value="Entrar">
    </p>
</form>

<p>@ViewBag.Mensagem</p>